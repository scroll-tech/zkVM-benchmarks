#!/bin/bash
set -euxo pipefail

export MAX=12000
# export MAX="$((1 << 14))"

for N in $(shuf --input-range=1-${MAX}); do
  for system in $(shuf --echo ceno sp1); do
    output="$(realpath --canonicalize-missing "sorting-output/${N}-$(date --iso-8601=ns --utc)/${system}")"
    mkdir --parents "${output}"
    ./run_${system}_sorting "${N}" "${output}"

  done
done
